{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "target": "ES2020",
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "allowJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": false,
        "noFallthroughCasesInSwitch": false,
        "module": "ES6",
        "moduleResolution": "Node",
        "downlevelIteration": true
    }
}